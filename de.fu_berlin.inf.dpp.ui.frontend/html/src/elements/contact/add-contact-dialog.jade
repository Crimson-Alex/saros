div.modal(role="dialog" tabindex="-1")
    div.modal-dialog(role="document")
        div.modal-content
                div.modal-header
                    button.close(data-dismiss="modal", aria-label="Close")
                        span(aria-hidden="true") &times;
                    h4.modal-title= d.action.addContact
                form
                    div.modal-body
                        div.info= d.message.addContactInfo
                        fieldset(data-hook="field-container")
                    div.modal-footer
                        button.btn.btn-default.btn-sm(data-dismiss="modal")= d.action.close
                        button.btn.btn-primary.btn-sm(data-hook="add", type="submit")= d.action.add